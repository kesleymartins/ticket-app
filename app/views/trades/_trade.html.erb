<%= turbo_frame_tag dom_id(trade) do %>
  <div class="box is-flex is-justify-content-space-between is-align-items-center my-2">
    <section>
      <div>
        <strong>Tenho:</strong>
        <span><%= trade.have_humanize %></span>
      </div>

      <div>
        <strong>Quero:</strong>
        <span><%= trade.wanted_humanize %></span>
      </div>

      <div>
        <strong>Local:</strong>
        <span><%= trade.place %></span>
      </div>
    </section>

    <section>
      <%= link_to 'Fechar', close_trade_path(trade), data: { turbo_method: :put }, class: 'button is-danger is-outlined' %>
    </section>
  </div>
<% end %>